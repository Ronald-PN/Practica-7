@model IEnumerable<AppCRUD_EmpleadoDB.Models.Models.Empleado>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<center>
    <img src="@Url.Content("~/Images/logo.png")" width="500px" height="200px" alt="imgf" />
</center>
<p>
    @Html.ActionLink("Crear Nuevo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Apellido)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cedula)
        </th>
